{
    "dependencies": {
        "dotnet-test-xunit": "1.0.0-rc3-build10019",
        "FakeItEasy": "2.1.0-netcore-alpha1",
        "Microsoft.NETCore.Platforms": "1.0.1-rc2-24027",
        "Nancy": { "target": "project" },
        "Nancy.Testing": { "target": "project" },
        "xunit": "2.1.0"
    },

    "buildOptions": {
        "copyToOutput": [
            "Resources/**/*"
        ],
        "embed": [
            "Resources/views/staticviewresource.html"
        ]
    },

    "frameworks": {
        "net452": {
            "buildOptions": {
                "define": [ "SERIALIZABLE", "SYSTEM_WEB", "SYSTEM_CODEDOM" ]
            },
            "frameworkAssemblies": {
                "System.Runtime": { "type": "build" },
                "System.Threading.Tasks": { "type": "build" },
                "System.Web": { "type": "build" }
            }
        },
        "netcoreapp1.0": {
            "buildOptions": {
                "define": [ "CORE" ]
            },
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "type": "platform",
                    "version": "1.0.0-rc2-3002702"
                },
                "System.Diagnostics.TraceSource": "4.0.0-rc2-24027",
                "System.Reflection.TypeExtensions": "4.1.0-rc2-24027"
            },
            "imports": [
                "dotnet5.4",
                "portable-net45+win8"
            ]
        }
    },

    "testRunner": "xunit"
}
